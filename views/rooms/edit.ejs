<%- include("../partials/header") %>
	<div class="row justify-content-center">
		<div class="col-md-12 text-center">
	 <h1>Editeaza <%= room.name %></h1>
		</div>
	<div class="col-xs-12 col-md-6 col-lg-4">
		<form action="/rooms/<%= room._id %>?_method=PUT" method="POST">
		  <div class="form-group">
			  <input class="form-control" type="text" name="room[name]" value="<%= room.name %>">
		  </div>
		  	<div class="form-group">
			  <input class="form-control" type="number" name="room[cost]" value="<%=room.cost %>" min="0.01" step="0.01">
		  </div>
			<div class="form-group">
				<input class="form-control" type="text" name="room[image]" value="<%= room.image %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="room[description]" value="<%= room.description %>">
			</div>
	      <div class="form-group">
	         <button class="btn btn-lrg btn-primary btn-block">Submit!</button>
		   </div>
        </form>
		<a href="/rooms">Go Back</a>
	</div>	
	</div>
<%- include("../partials/footer") %>
